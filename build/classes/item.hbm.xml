<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
 <hibernate-mapping>
   <class name="com.sapient.Item" table="PRODUCT_DETAILS">
      
      <id name="pId" type="int" column="I_ID">
         <generator class="assigned"/>
      </id>
      
      <property name="brandName" >
      	<column name="BRAND_NAME" ></column>
      </property>
      <property name="productType">
      	<column name="PRODUCT_TYPE"></column>
      </property>
      
      <property name="modelName">
      <column name="MODEL_NAME"></column>
      </property>
      
      <property name="utility">
      <column name="UTILITY"></column>
      </property>
      
      <property name="productQuantity" type="int">
      <column name="PRO_QUANTITY"></column>
      </property>
      
      <property name="cost" type="int">
      <column name="COST"></column>
      </property>
      
      <property name="description">
      <column name="DESCRIPTION"></column>
      </property>
   </class>
</hibernate-mapping>